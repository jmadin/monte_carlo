<h1>Monte Carlo randomisation test for comparing two samples</h1>

<div class="row">
  <div class="col-sm-12">
    <%= link_to 'Upload your data', new_test_path, class: "btn btn-primary" %>
  </div>
</div>
<br>
<div class="row">
  <div class="col-sm-12">
    <ul class="list-group">

      <% @tests.each do |test| %>

        <li class="list-group-item">              
          <div class="row">
            <div class="col-sm-1" style="color: lightgrey;">
              <%= test.id %>
            </div>

            <div class="col-sm-2">
              <%= test.name %>
            </div>

            <div class="col-sm-3">
              <%= test.sheltered %>
            </div>

            <div class="col-sm-3">
              <%= test.exposed %>
            </div>

            <div class="col-sm-3">
              <div class="btn-group">
                <%= link_to 'Run test', test, class: "btn btn-default", data: { no_turbolink: true } %>
                <%= link_to 'Edit', edit_test_path(test), class: "btn btn-default" %>
                <%= link_to 'Delete', test, :method => :delete, data: { confirm: "Are you sure?  Don't delete other peoples' data!" }, class: "btn btn-danger" %>
              </div>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
